# ==============================
# Frontend (public)
# ==============================
app.domain.com {
    reverse_proxy frontend:3000
}

# ==============================
# Backend API (public)
# ==============================
api.domain.com {
    reverse_proxy backend:3000
}

# ==============================
# Grafana (Logs + Metrics UI)
# ==============================
log.domain.com {
    reverse_proxy grafana:3000

}

